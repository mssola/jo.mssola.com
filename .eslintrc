{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "html"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack.js"
      }
    }
  },
  "rules": {
    "no-restricted-syntax": 0,
    "camelcase": 0,
    "func-names": 0,
    "prefer-arrow-callback": 0,
    "no-var": 0,
    "prefer-template": 0,
    "no-unused-vars": [2, {
      "args": "all",
      "argsIgnorePattern": "^_"
    }],
    "object-shorthand": 0,
    "no-plusplus": 0,
    "no-void": 0,
    "import/extensions": ["error", "always", {
      "js": "never"
    }]
  }
}
